<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Livestock_Management_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Livestock_Management_System"
    Shell.FlyoutBehavior="Disabled"
    Title="Livestock_Management_System">

    <TabBar>
        <Tab Title="Database-Tab">
            <ShellContent ContentTemplate="{DataTemplate local:DatabasePage}" />
        </Tab>
        <Tab Title="Query-Tab">
            <ShellContent ContentTemplate="{DataTemplate local:QueryPage}" />
        </Tab>
        <Tab Title="Livestock-Statistics-Tab">
            <ShellContent ContentTemplate="{DataTemplate local:LivestockStatistics}"/>
        </Tab>
    </TabBar>
</Shell>
